#!/bin/sh
# /etc/hotplug.d/firmware/00-qcom-loader
#
# Arranca msm-firmware-loader en el primer request de firmware.

[ "$ACTION" = "add" ] || exit 0
[ -x /usr/bin/msm-firmware-loader ] || exit 0

# SÃ³lo lo arrancamos una vez
LOCK=/tmp/msm-loader-done
[ -e "$LOCK" ] && exit 0

echo "[$(date)] msm-firmware-loader: preparando blobs para $FIRMWARE" >> /tmp/qcom-firmware.log
/usr/sbin/msm-firmware-loader >> /tmp/qcom-firmware.log 2>&1
touch "$LOCK"
